<div class="container mt-5 form-container">
  <div class="card text-center">
    <div class="card-header ">
      <h4><b>Log In</b></h4>
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group row">
          <%= f.label :email, for: "staticEmail", class: "col-sm-2 col-form-label"%>
          <div class="col-sm-10">
            <%= f.email_field :email,autocomplete: "email",placeholder: "abc@abc.com", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, for: "inputPassword", class: "col-sm-2 col-form-label"%>
          <div class="col-sm-10">
            <%= f.password_field :password, placeholder: "Password",  class: "form-control" %>
          </div>
        </div>

        <div class="d-flex justify-content-center">
          <div class="pl-1 ">
            <%= f.submit "Log In", class:"btn btn-primary device_buttons" %>
          </div>
          <div class="pl-1 ">
            <%= link_to "Sign up", new_registration_path(resource_name), class:"btn btn-primary device_buttons" %><br />
          </div>
          <div class="pl-1">
            <%= link_to "Forgot Password?", new_password_path(resource_name), class:"btn btn-primary " %><br />
          </div>
        </div>
      <% end %>
    </div>
    <div class="card-footer text-muted">
      Project Management
    </div>
  </div>
</div>
