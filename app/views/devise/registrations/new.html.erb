<div class="container mt-5 form-container">
  <div class="card text-center">
    <div class="card-header ">
      <h4><b>Sign Up</b></h4>
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%if params[:team_id].present?%>
          <%=f.hidden_field :team_id, :value => params[:team_id] %>
        <%end%>
        <div class="form-group row">
          <%= f.label :email, for: "staticEmail", class: "col-sm-2 col-form-label"%>
          <div class="col-sm-10">
            <%= f.email_field :email,autocomplete: "email",placeholder: "abc@abc.com", class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :name, for: "name", class: "col-sm-2 col-form-label"%>
          <div class="col-sm-10">
            <%= f.text_field :name, placeholder: "Guru Walia", class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :password, for: "inputPassword", class: "col-sm-2 col-form-label"%>
          <div class="col-sm-10">
            <%= f.password_field :password, placeholder: "Password",  class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :confirmation, for: "inputPassword", class: "col-sm-2 col-form-label"%>
          <div class="col-sm-10">
            <%= f.password_field :password_confirmation, placeholder: "Password", id: "inputPassword", class: "form-control" %>
          </div>
        </div>
        <div class="d-flex justify-content-center">
          <div class="pl-1 ">
            <%= f.submit "Sign up", class:"btn btn-primary device_buttons" %>
          </div>
          <div class="pl-1 ">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="card-footer text-muted">
      Project Management
    </div>
  </div>
</div>
