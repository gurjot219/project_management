<div class="container mt-5 form-container">
  <div class="card text-center">
    <div class="card-header ">
      <h4><b>Create Team</b></h4>
    </div>
    <div class="card-body">
      <%= form_for @team do |f| %>
        <div class="form-group row">
          <%= f.label :name, class: "col-sm-2 col-form-label"%>
          <div class="col-sm-10">
            <%= f.text_field :name, placeholder: "Team1", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :title, class: "col-sm-2 col-form-label"%>
          <div class="col-sm-10">
            <%= f.text_field :title, placeholder: "Good Team",  class: "form-control" %>
          </div>
        </div>

        <div class="d-flex justify-content-center">
          <div class="pl-1 ">
            <%= f.submit "Submit", class:"btn btn-primary device_buttons" %>
          </div>
          <div class="pl-1 ">
            <%= link_to "Back", root_path, class:"btn btn-primary device_buttons" %><br />
          </div>
        </div>
      <% end %>
    </div>
    <div class="card-footer text-muted">
      Project Management
    </div>
  </div>
</div>
